<%- include ("../partials/header") %>


<div class="container" style=" width: 50%; margin: 0 auto;">
        <h1>Create a New Camp Ground</h1>
        <div style="margin: 20px 0">
            <form  action="/campgrounds" method="POST">
                    <div class="form-group">
                        <label for="name">Camp Name</label>
                        <input type="text" class="form-control" id="name" aria-describedby="nameHelp" name="name">
                        <small id="nameHelp" class="form-text text-muted">Write the name of the campground, you want to add.</small>
                    </div>
                    <div class="form-group">
                        <label for="image">Image url</label>
                        <input type="text" class="form-control" id="image" name="image">
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" class="form-control" id="description" name="description">
                    </div>
                    <button type="submit" class="btn btn-lg btn-primary">Submit</button>
                
            </form>
        </div>
        <a href="/campgrounds">Go back to view Camp grounds</a>
    
</div>

<%- include ("../partials/footer") %>