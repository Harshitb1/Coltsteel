<%- include ("../partials/header") %>


<!-- //header has a symantic meaning although it works just like a div -->
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked Campgrounds from all over the world</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New campground</a></p>
        </div>
        
    </header>
  
    <div class="row">
        <% campgrounds.forEach((campground)=>{ %>
            <div class="col-md-4 col-sm-6">
                <div class="card text-center">
                    <img class="card-img-top" src=" <%= campground.image %>">
                    <div class="card-body">
                        <h5 class="card-title"> <%= campground.name %></h5>
                        <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">More Info</a>
                        </p>
                    </div>    
                </div>
            </div>
            
        <% }); %>
    </div>
    
    
</div>



<%- include ("../partials/footer") %>