<%- include ("../partials/header") %>


<div class="container" style=" width: 50%; margin: 0 auto;">
        <h1>Add New Comment to <%= campground.name %></h1>
        <div style="margin: 20px 0">
            <form  action="/campgrounds/<%=campground._id%>/comments" method="POST">
                    <div class="form-group">
                        <label for="name">Text</label>
                        <input type="text" class="form-control" placeholder="write your comment here"  name="comment[text]">
                        
                    </div>
                    <div class="form-group">
                        <label for="image">Author</label>
                        <input type="text" class="form-control" placeholder="name of the author" name="comment[author]">
                    </div>

                    <button type="submit" class="btn btn-lg btn-primary">Submit</button>
                
            </form>
        </div>
        <a href="/campgrounds">Go back to view Camp grounds</a>
    
</div>

<%- include ("../partials/footer") %>